<% layout("/layouts/boilerplate") %>
<body>
    <h1 style="text-align: center;" class="heading">All Listings</h1>
    <div class="row justify-content-center">
        <% for(let listing of allListings) { %>
            <a class="listinglink col-lg-3 col-md-6 col-sm-8 mb-4 d-flex justify-content-center" href="/listings/<%= listing._id %>">
                <div class="card">
                    <img class="card-img-top" src="<%= listing.image.url %>" alt="Card image cap">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <%= listing.title %>
                        </p>
                        <p class="card-text"> &#8377 <%= listing.price %> /night </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>